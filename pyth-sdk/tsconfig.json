{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "src/",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "composite": true,
    "declarationMap": true,
    "incremental": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
